{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
            ],
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/build/Debug/oglengine.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "configure",
                "build"
            ],
            "dependsOrder": "sequence"
        }
    ]
}
